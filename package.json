{
  "name": "authentication",
  "private": true,
  "bolt": {
    "workspaces": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "node scripts/postinstall",
    "build": "node scripts/build-all --only-changed",
    "build:all": "node scripts/build-all",
    "prerelease": "yarn build:all",
    "prettier": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "release": "bolt publish",
    "test": "jest && bolt ws run test",
    "watch:jest": "jest --watch",
    "clean": "rimraf packages/*/lib && rimraf packages/*/build && rimraf packages/*/node_modules && rimraf node_modules"
  },
  "devDependencies": {
    "@types/bytes": "^3.0.0",
    "@types/jest": "^21.1.5",
    "@types/mkdirp": "^0.5.1",
    "@types/ms": "^0.7.30",
    "@types/node": "^8.0.33",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/rimraf": "^2.0.2",
    "babel-core": "^6.26.0",
    "cross-spawn": "^6.0.5",
    "jest": "^21.2.1",
    "lsr": "^2.0.0",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.1.4",
    "typescript": "^3.0.1"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>.*(node_modules)(?!.*authentication.*).*$"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.+\\.test\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "@moped/serve-assets": "^0.0.7",
    "@moped/start-server": "^0.0.11",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/nodemailer": "^4.6.2",
    "@types/stripe": "^5.0.21",
    "base32": "^0.0.6",
    "body-parser": "^1.18.3",
    "bytes": "^3.0.0",
    "express": "^4.16.3",
    "moped": "^0.7.24",
    "ms": "^2.1.1",
    "nodemailer": "^4.6.7",
    "nodemailer-mailgun-transport": "^1.4.0",
    "nodemailer-postmark-transport": "^1.3.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "oauth": "^0.9.15",
    "react": "^16.4.2",
    "react-digit-input": "^1.1.0",
    "react-dom": "^16.4.2",
    "secure-password": "^3.0.0",
    "stripe": "^6.7.0",
    "then-request": "^6.0.0",
    "throat": "^4.1.0"
  }
}
